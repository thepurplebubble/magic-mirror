generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Associate the Mirror TS with the Wish TS
model Bridge {
  mirrorTs       String  @id
  originTs       String  @unique
  originServer   String
  mirrorServer   String
  mirrorParentTs String?
  originParentTs String?
}
